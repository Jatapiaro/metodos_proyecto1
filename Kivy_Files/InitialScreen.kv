<InitialScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Simulador de n\u00FAmeros random"

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "M\u00E9todo de los centros cuadrados"
                on_press: root.centros()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "M\u00E9todo congruencial lineal"
                on_press: root.congruencial_lineal()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "M\u00E9todo congruencial mixto"
                on_press: root.congruencial_mixto()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Generador multplicativo"
                on_press: root.congruencial_multiplicativo()


        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Salir"
                on_press: root.close_app()

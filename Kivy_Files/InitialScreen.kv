<InitialScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Simulador de números random"

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Método de los centros cuadrados"
                on_press: root.centros()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Método congruencial lineal"
                on_press: root.congruencial_lineal()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Método congruencial mixto"
                on_press: root.congruencial_mixto()

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Generador multplicativo"
                on_press: root.congruencial_multiplicativo()


        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Salir"
                on_press: root.close_app()
